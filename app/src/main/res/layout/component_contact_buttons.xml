<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:id="@+id/button_comp"
    android:animateLayoutChanges="true"
    android:background="@color/black"
    android:foreground="@drawable/green_box"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title_buttons"
        android:text="Titulo"
        android:textColor="?attr/colorPrimary"
        android:textSize="20dp"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="@drawable/green_button"
        android:drawableStart="@drawable/ic_whatsapp"
        android:drawableTint="@color/black"
        android:id="@+id/button_whatsapp"
        android:text="@string/send_whats"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="@drawable/green_button"
        android:drawableStart="@drawable/ic_mail"
        android:drawableTint="@color/black"
        android:id="@+id/button_mailto"
        android:text="@string/send_mail_to"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="@drawable/green_button"
        android:drawableStart="@drawable/ic_github"
        android:drawableTint="@color/black"
        android:id="@+id/button_github"
        android:text="@string/github_repository"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>